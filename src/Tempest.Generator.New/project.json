{
    "version": "1.0.0-*",

    "description": "Empty Tempest Template Class Library for Tempest ",
    "packOptions": {
        "licenseUrl": ""
    },

    "dependencies": {
        "NETStandard.Library": "1.6.1",
        "Tempest.Core": {
            "version": "1.0.0-*",
            "type": "default"
        }
    },

    "frameworks": {
        "netstandard1.6": {
            "imports": "dnxcore50"
        }
    },
    "buildOptions": {
        "compile": {
            "excludeFiles": [
                "Template/SelfHosted/Program.cs",
                "Template/HelloWorldGenerator.cs",
                "Template/Library/project.json",
                "Template/build.ps1",
                "Template/Library/build.cake",
                "Template/NuGet.config"
            ]
        },
        "copyToOutput": {
            "include": "Template/**"
        },
        "embed": {
            "includeFiles": [
                "Template/SelfHosted/Program.cs",
                "Template/HelloWorldGenerator.cs",
                "Template/Library/project.json",
                "Template/build.ps1",
                "Template/Library/build.cake",
                "Template/NuGet.config"
            ]
        }
    }
}
